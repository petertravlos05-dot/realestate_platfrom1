{
  "name": "realestate-platform-backend",
  "version": "1.0.0",
  "description": "Backend API for Real Estate Platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:with-db": "node scripts/setup-db.js && node dist/index.js",
    "start:render": "npx prisma db push --skip-generate; node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "postinstall": "prisma generate",
    "db:push": "prisma db push",
    "db:setup": "node scripts/setup-db.js"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^6.7.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "@aws-sdk/client-s3": "^3.821.0",
    "stripe": "^17.3.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.0",
    "@types/express": "^5.0.1",
    "prisma": "^6.7.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}

